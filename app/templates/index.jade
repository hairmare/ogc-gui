doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    title='Online GLSA Checker'
    link(rel="stylesheet")
    style
      include ../../bower_components/bootstrap/dist/css/bootstrap.min.css
      include ../../bower_components/bootstrap/dist/css/bootstrap-theme.min.css
      include ../../bower_components/github-fork-ribbon-css/gh-fork-ribbon.css
  body
    include _navbar.jade
    div.container#main
      div(data-bind="page: {id: 'start'}")
        include about.jade
      div(data-bind="page: {id: 'search', with: search}")
        include search.jade
      div(data-bind="page: {id: 'add', with: add}")
        include add.jade
      div(data-bind="page: {id: 'error'}")
        include error.jade
      div(data-bind="page: {id: 'image', params: ['id'], withOnShow: loadImage }")
        include image.jade
      div(data-bind="page: {id: 'build', params: ['id'], withOnShow: loadBuild }")
        include build.jade
    footer.text-center(style="padding-top: 2em;")
      small MMXIV, Lucas S. Bickel
    div.github-fork-ribbon-wrapper.right-bottom
      div.github-fork-ribbon
        a(href="https://github.com/hairmare/ogc") Fork me on Github

  script
    include ../../bower_components/jquery/dist/jquery.min.js
  script
    include ../../bower_components/knockoutjs/dist/knockout.js
  script
    include ../../bower_components/pagerjs/dist/pager.min.js
  script
    include ../../bower_components/bootstrap/dist/js/bootstrap.min.js
  script
    include ../../bower_components/jquery.rest/dist/1/jquery.rest.min.js

  script
    include ../main.js

